{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "lib"
    },
    "include": ["src"],
    "exclude": ["node_modules", "assets", ".vscode"]
}
